<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
            disable="true"
            fx:controller="application.controller.MonitorController">
    <top>
        <VBox>
            <!--<ChoiceBox fx:id="choicebox_device" prefHeight="27.0" prefWidth="282.0">-->
                <!--<VBox.margin>-->
                    <!--<Insets left="10.0" top="10.0"/>-->
                <!--</VBox.margin>-->
            <!--</ChoiceBox>-->
            <ToolBar fx:id="toolbar_main">
                <items>
                    <Button fx:id="toolbtn_start" mnemonicParsing="false" onAction="#doStartMonitor" text="录制"/>
                    <Button fx:id="toolbtn_pause" mnemonicParsing="false" onAction="#doPauseMonitor" text="暂停"/>
                    <Button fx:id="toolbtn_stop" mnemonicParsing="false" onAction="#doStopMonitor" text="停止"/>
                    <Button fx:id="toolbtn_replay" mnemonicParsing="false" onAction="#doReplayMonitor" text="回放"/>
                </items>
            </ToolBar>

        </VBox>
    </top>
    <center>
        <BorderPane fx:id="panel_table">
            <center>
                <TableView fx:id="tableview_events" editable="true">
                    <columns>
                        <TableColumn prefWidth="75.0" text="事件源"/>
                        <TableColumn prefWidth="75.0" text="事件类型"/>
                        <TableColumn prefWidth="75.0" text="事件描述"/>
                        <TableColumn prefWidth="75.0" text="事件耗时"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </center>
        </BorderPane>
    </center>

</BorderPane>
